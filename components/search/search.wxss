/* components/search/search.wxss */
.search-view
{
  position:fixed;
  z-index:99;
  width: 100%;
  height: 80rpx;
  background-color:#fff;
  /* top: 9%; */
  box-shadow:0px 1px 2px rgb(230, 230, 230);
}
.retailStore{
  background:rgba(206, 205, 205, 0.2);
  border-radius:50rpx;
  color:#fff;
  padding:0 20rpx;
  top:5rpx;
  width:95%;
  height: 60rpx;
  float: left;
  margin-left: 2%;
}
.posBtn{
  height:60rpx;
  line-height:60rpx;
  border-radius: 50rpx;

}
.retailStore .m-bbt{
  width:85%;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-size:24rpx;
  border-radius:50rpx;

}
.retailStore .ic{
  position:absolute;
  right:10rpx;
  top:5rpx;
}
form.search-form {
  padding: 16rpx 24rpx;
  display: block;
}
.search-box {
  display: flex;
  flex-direction: row;
}

.search-box view {
  flex-grow: 1;
  align-items: center;
}

.search-box view:last-child {
  flex-grow: 0;
}

.search-box .search-icon {
  height: 24rpx;
  width: 24rpx;
}

.search-box .search-cancel {
  display: inline-block;
  height: 64rpx;
  line-height: 68rpx;
  /* color: #00c203; */
  white-space: nowrap;
  padding: 0 24rpx;
  margin-right: -24rpx;
}

.input-box {
  display: flex;
  flex-direction: row;
  background: #fff;
  border: 1rpx solid #e3e3e3;
  height: 64rpx;
  border-radius: 10rpx;
}

.input-box view {
  flex-grow: 1 !important;
  align-items: center;
}

.input-box view:first-child {
  flex-grow: 0;
}

.search-box .search-icon {
  height: 24rpx;
  width: 24rpx;
}

.pull-down {
  /* width: 124rpx; */
}

.pull-down-list {
  background-color: #fff;
  position: absolute;
  top: 80rpx;
  width: 150rpx;
  border: 1px solid #e3e3e3;
  border-radius: 15rpx;
  z-index: 999;
}

.pull-down-text {
  font-size: 11pt;
  height: 88rpx;
  border-bottom: 1px solid #e3e3e3;
}

.cat {
  font-size: 11pt;
  margin: 10rpx 10rpx 0 24rpx;
}