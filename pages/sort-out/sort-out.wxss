.goto-top {
  position: fixed;
  z-index: 10;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: auto;
  background: #eee;
  color: #ff7256;
  /* border-top: 2rpx solid #ff7256; */
  letter-spacing: 2px;
  /* font-size: 30rpx; *//* font-weight: 600; */
  text-align: center;
}

.rtop-btn {
  position: absolute;
  top: 50%;
  right: 10rpx;
  transform: translate(0, -50%);
  color: rgb(160, 160, 160);
}

.order-warp {
  background: #fff;
  margin: 10rpx 10rpx 30rpx;
  padding: 30rpx 10rpx;
  border-radius: 20rpx;
  /* padding-top: 90rpx; */
  flex-direction: column;
}

.order-warp .ok-btn {
  width: 300rpx;
  margin: 30rpx auto;
  padding: 10rpx 30rpx;
  font-size: 36rpx;
  text-align: center;
  background: #ff7256;
  border-radius: 20px/20px;
  color: white;
}

.order-warp .head {
  position: relative;
  width: 100%;
}

.head {
  padding: 10rpx 20rpx;
  color: #333;
}

.head .index {
  font-size: 24rpx;
  border-radius: 10px/10px;
  border: 1px solid #56a5ff;
  color: #6495ed;
  margin: 2px 6px 2px 0;
  padding: 0 8rpx;
}

.head .sn {
  height: 75rpx;
  line-height: 75rpx;
  /* padding-left: 30rpx; */
  font-size: 28rpx;
}

.head .count-item {
  width: 100%;
  margin: auto 10rpx;
  font-size: 28rpx;
  text-align: right;
  border-bottom: 1px solid #aaa;
}

.count-item .count {
  /* color: #ff7256; */
  color: #56a5ff;
  font-size: 36rpx;
  font-weight: 600;
}

.info-box {
  margin: 30rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  color: #828282;
  border-top: 1px solid #aaa;
}

.addr {
  margin: 10rpx;
}

.note {
  margin: 10rpx;
}

.note .title {
}

/* 商品 */

.goods-box {
  margin: 6px;
  /* border: 1px solid #ccc; *//* background: #FFFAFA; */
  display: flex;
  flex-direction: column;
}

.goods-item {
  display: flex;
  flex-direction: row;
  border-radius: 10px;
  margin: 6rpx;
  background: #fffafa;
  width: calc(100% - 12px);
  min-height: 240rpx;
  padding: 10rpx;
}

.goods-item .index {
  margin: 6rpx;
  font-size: 36rpx;
  /* font-weight: 600; */
}

.goods-item image {
  display: flex;
  width: 220rpx;
  height: 220rpx;
}

.goods-item .goods-info {
  margin: 10rpx;
  min-height: 220rpx;
  flex: 1;
  text-align: left;
}

.goods-name {
  color: #333;
  font-size: 42rpx;
  flex: 1;
}

.goods-num {
  position: relative;
  bottom: 0;
}

.option-bar {
  margin: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  /* justify-items: center; */
}

.op-button {
  margin: 10rpx;
  padding: 10rpx 30rpx;
  font-size: 36rpx;
  background: #6495ed;
  /* #66CDAA; *//* #32CD32; */
  border-radius: 20px/20px;
  color: white;
}
