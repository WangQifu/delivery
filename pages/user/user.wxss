.shop-img image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin: 20rpx;
}

.order-warp {
  border: 1px solid rgb(245, 225, 214);
  background: #fff;
  margin: 10rpx 10rpx 30rpx;
  padding: 30rpx 10rpx;
  border-radius: 20rpx;
  /* padding-top: 90rpx; */
  flex-direction: column;
}

.order-warp .ok-btn {
  width: 300rpx;
  margin: 30rpx auto;
  padding: 10rpx 30rpx;
  font-size: 36rpx;
  text-align: center;
  background: #ff7256;
  border-radius: 20px/20px;
  color: white;
}

.order-warp .head {
  position: relative;
  width: 100%;
}

.head {
  padding: 10rpx 20rpx;
  color: #333;
}

.head .index {
  font-size: 24rpx;
  border-radius: 10px/10px;
  border: 1px solid #56a5ff;
  color: #6495ed;
  margin: 2px 6px 2px 0;
  padding: 0 8rpx;
}

.head .sn {
  height: 75rpx;
  line-height: 75rpx;
  /* padding-left: 30rpx; */
  font-size: 36rpx;
  font-weight: 600rpx
}

.head .count-item {
  width: 100%;
  margin: auto 10rpx;
  font-size: 28rpx;
  text-align: right;
  border-bottom: 1px solid #aaa;
}

.count-item .count {
  /* color: #ff7256; */
  color: #56a5ff;
  font-size: 36rpx;
  font-weight: 600;
}

.info-box {
  margin: 10rpx 30rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  /* font-weight: 600; */
  color: #828282;
  border-top: 1px solid #aaa;
}

.addr {
  margin: 10rpx;
}

.note {
  margin: 10rpx;
  height: 45rpx;
}

