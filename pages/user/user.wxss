/* pages/user/user.wxss */
@import "/common/wxss/swiper-tab.wxss";

.user-info{
  position: fixed;
  top:0;
  z-index: 10;
  background: rgb(250, 75, 75);
  width: 100%;
  height:320rpx;
  padding:60rpx 0;
  color:#fff;
}
/* .shop-img {
  width: 180rpx;
