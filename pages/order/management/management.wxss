/* pages/order/management/management.wxss */
@import "/common/wxss/swiper-tab.wxss";

page {
  height: 100%;
  background: #fcdcd6;
}

.head {
  background:white;
  width: 100%;
  position: fixed;
  z-index: 10;
  top: 0;
}

.goto-sort {
  position: fixed;
  z-index: 10;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: auto;
  /* border-radius: 100px 100px 100px/100px; */
  background: #ff7256;
  color: white;
  /* border-top: 2rpx solid #ff7256; */
  letter-spacing: 2px;
  font-size: 38rpx;
  font-weight: 600;
  text-align: center;
}

/* 订单列表 */

.wrap {
  width: 100%;
  height: 100%;
  /* background: #fcdcd6; */
  padding: 90rpx 10rpx 100rpx;
  /* padding: 180rpx 10rpx 100rpx; */
  /* position: relative; */
}

.box {
  background: #fff;
  border-radius: 20rpx;
  margin: 20rpx 10rpx;
  padding: 20rpx;
}

/* .box .title{

} */

.index {
  font-size: 24rpx;
  border-radius: 10px/10px;
  border: 1px solid #ff7256;
  color: #ff7256;
  margin: 2px 6px 0 0;
  padding: 0 8rpx;
}

.sn {
  font-size: 30rpx;
  color: #333;
}

.info-box {
  margin: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #828282;
}

.addr {
  /* font-weight: 600; */
  margin: 10rpx;
}

.note {
  margin: 10rpx;
}

.note .title {
}

.goods-box {
  margin: 6px;
  border: 1px solid #ccc;
  /* background: #FFFAFA; */
  display: flex;
  flex-direction: row;
  line-clamp: 1;
  overflow-x: scroll;
}

.goods-item {
  border-radius: 10px;
  margin: 6px;
  background: #fffafa;
  width: 200rpx;
  height: 260rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-items: center;
}

.goods-item image {
  width: 180rpx;
  height: 180rpx;
}

.goods-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #666;
  font-size: 24rpx;
  text-align: center;
}

.option-bar {
  margin: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  /* justify-items: center; */
}

.op-button {
  margin: 10rpx;
  padding: 10rpx 30rpx;
  font-size: 36rpx;
  background: #6495ed;
  /* #66CDAA; *//* #32CD32; */
  border-radius: 20px/20px;
  color: white;
}
