.article {
  width: 660rpx;
  border: solid 5rpx silver;
  box-sizing: border-box;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  /* margin: auto; */
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.saoma, .article navigator {
  /* border: solid 5rpx blueviolet; *//* padding: 30rpx; */
  border-radius: 20rpx;
  background-color: rgb(250, 75, 75);
  color: #fff;
  margin: 20rpx;
  width: 160rpx;
  height: 160rpx;
}
.saoma text,.article navigator text{
  display: inline-block;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  line-height: 50rpx;
  font-size: 45rpx;
  font-weight: 600;
}
