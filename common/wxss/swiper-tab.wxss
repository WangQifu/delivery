.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  background: white;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  overflow-x: scroll;
  /* justify-content: space-around; */
}

.swiper-tab-item {
  /* width: 30%; */
  flex:1;
  min-width: 200rpx;
  color: #434343;
}
